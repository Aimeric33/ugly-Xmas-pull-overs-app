<div class="container mt-5">
  <h1 class="text-center title">Mes pulls loués</h1>
  <div class="container">
    <div class="cards">
      <% @bookings.each do |booking| %>
        <div class="card-product">
          <%= cl_image_tag booking.pull.photo.key, height: 300, width: 400, crop: :fill %>
          <div class="card-product-infos">
            <h2><%= link_to booking.pull.title, pull_path(booking.pull) %></h2>
            <p>Réservé du <%= booking.start_date %> au <%= booking.end_date %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
