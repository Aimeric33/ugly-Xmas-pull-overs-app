<div class="container mt-5">
  <h1 class="text-center">Mes annonces de pulls</h1>
  <div class="container">
    <div class="cards">
      <% @pulls.each do |pull| %>
        <div class="card-product">
          <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" style="width:100%"/>
          <div class="card-product-infos">
            <h2><%= pull.title %></h2>
            <p><%= pull.description %></p>
            <div class="d-flex justify-content-end m-3">
              <div class="price me-5">
              <%= link_to "Edit", "#" , class: "btn-grey" %>
              </div>
              <%= link_to "Delete", "#" , class: "btn-grey" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
