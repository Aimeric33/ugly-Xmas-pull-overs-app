<div class="container">
  <div class="card-show d-flex justify-content-evenly">
    <div class="photo-pull">
        <%= cl_image_tag @pull.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
    <%# info sur le pull %>
    <div class="infos-pull">
      <div class="title-h1 d-flex justify-content-between">
        <div class="title-pull m-3">
          <h1><%= @pull.title %></h1>
        </div>
        <%# titre et taille du pull %>
        <div class="title-size m-3">
          <h1><%= @pull.size %></h1>
        </div>
      </div>
      <%# description du pull %>
      <div class="description m-3">
        <p><%= @pull.description %></p>
      </div>
      <%# form avec prix pour les dates de réservation e%>
      <div class="m-3">
        <%= simple_form_for [@pull, @booking] do |f| %>
          <%= f.input :start_date, html5: true %>
          <%= f.input :end_date, html5: true %>
          <h2 class= "d-flex justify-content-end"><%= @pull.price.round %>€</h2>
          <div class= "d-flex justify-content-end"><%= f.submit class: "btn-grey"%></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
