<h1 class="title"><strong>Winter is coming...</strong></h1>
<div class="container">
  <div class="cards_home">
    <% @pulls.each do |pull| %>
        <div class="card-product-home">
      <%= link_to pull_path(pull) do %>
          <% if pull.photo&.attached? %>
            <%= cl_image_tag pull.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <%= image_tag("#{pull.user.first_name.capitalize}.png") %>
          <% end %>
          <div class="card-product-infos">
            <h2><%= pull.title %></h2>
            <p><%= pull.description %></p>
          </div>
      <% end %>
        </div>
    <% end %>
  </div>
</div>
