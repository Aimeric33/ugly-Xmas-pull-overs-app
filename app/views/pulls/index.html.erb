<h1 class="title"><strong>Winter is coming...</strong></h1>
<div class="container">
  <div class="cards">
    <% @pulls.each do |pull| %>
      <div class="card-product">
        <%= cl_image_tag pull.photo.key, height: 300, width: 400, crop: :fill %>
        <%# <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" style="width:100%"/> %>
        <div class="card-product-infos">
          <h2><%= link_to pull.title, pull_path(pull) %></h2>
          <p><%= pull.description %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
